<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="com.example.demo20.LibraryController" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;">
    <Label text="Год издания:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="publicationYearField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Дата возврата (по правилам):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Фактическая дата возврата:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Рассчитать штраф" fx:id="calculateButton" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#calculateFine"/>

    <Label fx:id="resultLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
